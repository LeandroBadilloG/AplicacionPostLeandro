            <form class="m-5" action="/tienda/v1/registrarUsuario" method="post">
                <div class="form-group ">
        
                    <label for="nombreUsuario" class="form-label p-1 ">NOMBRE</label>
                    <input type="text" class="form-control"   name="nombreUsuario">
        
                    <label for="apellidoUsuario" class="form-label p-1">APELLIDO</label>
                    <input type="text" class="form-control"   name="apellidoUsuario">
        
                    <label for="telefonoUsuario" class="form-label p-1">TELEFONO</label>
                    <input type="number" class="form-control"   name="telefonoUsuario">
                    
                    <label for="direccionUsuario" class="form-label p-1">DIRECCION</label>
                    <input type="text" class="form-control" id="direccionUsuario"  name="direccionUsuario">
                    
                    <label for="correoUsuario" class="form-label p-1">CORREO</label>
                    <input type="email" class="form-control"   name="correoUsuario">
        
                    <label for="contraseñaUsuario" class="form-label p-1">CONTRASEÑA</label>
                    <input type="password" class="form-control"  name="contraseñaUsuario">
        
                </div>
                <div class="form-group ">
                    <input type="submit" class="btn btn-primary p-1 mt-5"></input>
                </div>
            </form>
      



    

