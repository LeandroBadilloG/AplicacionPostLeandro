    <!-- Offcanvas del carrito -->
    <div class="offcanvas offcanvas-end" data-bs-scroll="true" tabindex="-1" id="carrito"
        aria-labelledby="carritoLabel">
        <div class="offcanvas-header">
            <h5 class="offcanvas-title" id="carritoLabel">Carrito</h5>
            <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close" onclick=""></button>
        </div>
        <div class="offcanvas-body">

            <div id="productos">

            </div>

        </div>
        <div class="offcanvas-end py-3" id="precioTotal">
        </div>

    </div>


    <script type="text/javascript">

        var carrito = JSON.parse(localStorage.getItem('carrito')) || [];


        function agregarAlCarrito(nombre, precio, id) {

            const verificarProducto = carrito.some((elemento) => elemento.id === id);
            console.log(verificarProducto)

            if (verificarProducto) {
                carrito.map((elemento) => {
                    if (elemento.id === id) {

                        elemento.cantidad++;

                        nuevoLocalStorage();

                    }
                });

            } else {

                const producto = { 'nombre': nombre, 'precio': precio, 'cantidad': 1, 'id': id };

                carrito.push(producto);

                nuevoLocalStorage()
            }
        }





        function listaCarrito() {

            productos.innerHTML = ``;

            carrito.forEach((elemento) => {

                productos.innerHTML += `
                <div class="card mb-3" style="max-width: 545px;">
                    <div class="row g-0">
                        <div class="col-md-4">
                            <img src="https:picsum.photos/100/150" class="img-fluid rounded-start" alt="...">
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                                <h5 class="card-title">${elemento.nombre}</h5>
                                <p class="card-text text-success">${elemento.precio}</p>
                                <div class="row" >
                                    <div  class="row row-cols-md-2">
            
                                        <button  class="btn btn-outline-primary mx-1" style="max-height:40px; max-width:40px;" onclick="restar('${elemento.id}')">-</button>

                                        <input name='cantidad'  class="form-control" type="text" value="${elemento.cantidad}" style="max-height:40px; max-width:40px;"  readonly>

                                        <button class="btn btn-outline-success ms-1" style="max-height:40px; max-width:40px;" onclick="sumar('${elemento.id}')">+</button>
                                        
                                        <button class="btn btn-outline-danger ms-4" style="max-height:40px; max-width:40px;" onclick="eliminarProducto('${elemento.id}')"><i class="bi bi-trash3"></i></button>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            `
            })
            totalCompra();



        }

        function totalCompra() {

            const total = carrito.reduce((acc, el) => acc + parseFloat(el.precio * el.cantidad), 0).toFixed(2);

            precioTotal.innerHTML = `
            <div class="row" >
                <div class="row row-cols-6 row-cols-md-2">
                    <h5 class="text-success">Total: ${total}$</h5>
                </div>
            </div>
            `
        }


        function eliminarProducto(id) {

            const idProducto = carrito.find((elemento) => elemento.id === id);

            carrito = carrito.filter((elemento) => {
                return elemento !== idProducto;
            });

            listaCarrito();
            nuevoLocalStorage();
        }



        function nuevoLocalStorage() {
            localStorage.setItem('carrito', JSON.stringify(carrito));
        }


        function sumar(id) {

            carrito.map((elemento) => {
                if (elemento.id === id) {

                    elemento.cantidad++;

                    nuevoLocalStorage();
                    listaCarrito();

                }
            });
        }

        function restar(id) {

            carrito.map((elemento) => {
                if (elemento.id === id) {

                    elemento.cantidad--;

                    if (elemento.cantidad == 0) {
                        eliminarProducto(id)
                    }

                    nuevoLocalStorage();
                    listaCarrito();
                }
            });
        }

    </script>
